{
  "rules": {
    "calendars": {
      "$user_id": {
        ".read": "auth.uid != null",
        ".write": "$user_id === auth.uid"
      }
    },
    "groups": {
      "$group_id": {
        "description": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        },
        "members": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        },
        "name": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        },
        "$other": { ".validate": false }
      }
    },
    "users": {
      "$user_id": {
        "description": {
          ".read": "auth.uid != null",
          ".write": "$user_id === auth.uid"
        },
        "email": {
          ".read": "$user_id === auth.uid",
          ".write": "$user_id === auth.uid"
        },
        "name": {
          ".read": "auth.uid != null",
          ".write": "$user_id === auth.uid"
        },
        "$other": { ".validate": false }
      }
    }
  }
}
